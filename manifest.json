{
    "name": "Crunchyroll Windowed Fullscreen",
    "description": "Add windowed fullscreen mode to Crunchyroll's video player",
    "version": "1.0",
    "manifest_version": 2,
    
    "developer": {
        "name": "Weining Li",
        "url": "https://github.com/weining-li"
    },
    
    "icons": {"128": "icon_128.png"},
    
    "permissions": [
        "activeTab",
        "<all_url>"
    ],
    
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["*://*/*"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ]
}